                <TextCell Text = "Drilldown sử dụng Item ListView" Tapped="navigateToPage" CommandParameter="DrilldownListViewByItem" />
                <TextCell Text = "Drilldown sử dụng Page ListView" Tapped="navigateToPage" CommandParameter="DrilldownListViewByPage" />
                <TextCell Text = "Drilldown sử dụng TableView để gom nhóm" Tapped="navigateToPage" CommandParameter="DrilldownTableView" />
                <TextCell Text = "Menu đẩy sử dụng ActionSheet" Tapped="navigateToPage" CommandParameter="PopupMenu" />
