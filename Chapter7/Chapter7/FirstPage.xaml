                <TextCell Text = "Sử dụng Tab" Tapped="navigateToPage" CommandParameter="TabPage" />
                <TextCell Text = "Sử dụng Tab có Source" Tapped="navigateToPage" CommandParameter="TabPageDatabound" />
                <TextCell Text = "Bảng điều khiển sử dụng Grid" Tapped="navigateToPage" CommandParameter="Springboard" />
